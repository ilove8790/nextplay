{
    "manifest_version": 3,
    "name": "NextPlay Auto for LG Display LMS",
    "version": "1.0",
    "description": "Auto play and auto next for LG Display LMS videos.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://lcms.lgdisplay.co.kr/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://lcms.lgdisplay.co.kr/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}